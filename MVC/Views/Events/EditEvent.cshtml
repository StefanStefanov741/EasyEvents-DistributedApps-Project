@model MVC.ViewModels.EventVM

@{
    ViewBag.Title = "EditEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit event</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>information</h4>
